    "paths": {
        "/api/activities": {
            "get": {
                "tags": [
                    "Activities"
                ],
                "summary": "Получение списка всех видов деятельности в виде дерева",
                "description": "Возвращает все виды деятельности, организованные в иерархическую структуру дерева",
                "operationId": "api.activities.list",
                "responses": {
                    "200": {
                        "description": "Дерево видов деятельности",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/RActivityTree"
                                            },
                                            "example": [
                                                {
                                                    "id": 1,
                                                    "name": "Разработка",
                                                    "parent_id": null,
                                                    "children": [
                                                        {
                                                            "id": 2,
                                                            "name": "Frontend разработка",
                                                            "parent_id": 1,
                                                            "children": []
                                                        },
                                                        {
                                                            "id": 3,
                                                            "name": "Backend разработка",
                                                            "parent_id": 1,
                                                            "children": []
                                                        }
                                                    ]
                                                }
                                            ]
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Дерево видов деятельности получено успешно"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/organizations/get/{id}": {
