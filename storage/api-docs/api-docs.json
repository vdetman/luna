        "/api/organizations/by-location": {
            "get": {
                "tags": [
                    "Organizations"
                ],
                "summary": "Получить список организаций по местоположению",
                "description": "Возвращает список организаций, которые находятся в заданном радиусе или прямоугольной области относительно указанной точки на карте",
                "operationId": "e0b5f7052664d5b0d6b1ef87d74f1804",
                "parameters": [
                    {
                        "name": "latitude",
                        "in": "query",
                        "description": "Широта центральной точки",
                        "required": true,
                        "schema": {
                            "type": "number",
                            "format": "float",
                            "example": 55.7558
                        }
                    },
                    {
                        "name": "longitude",
                        "in": "query",
                        "description": "Долгота центральной точки",
                        "required": true,
                        "schema": {
                            "type": "number",
                            "format": "float",
                            "example": 37.6176
                        }
                    },
                    {
                        "name": "type",
                        "in": "query",
                        "description": "Тип поиска. Круг или квадрат",
                        "required": true,
                        "schema": {
                            "enum": [
                                "circle",
                                "square"
                            ],
                            "example": "circle"
                        }
                    },
                    {
                        "name": "radius",
                        "in": "query",
                        "description": "Радиус поиска в метрах (используется, если type == circle)",
                        "schema": {
                            "type": "number",
                            "format": "integer",
                            "example": 1000
                        }
                    },
                    {
                        "name": "width",
                        "in": "query",
                        "description": "Ширина квадрата в метрах (используется, если type == square)",
                        "schema": {
                            "type": "number",
                            "format": "integer",
                            "example": 1000
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Список организаций по местоположению",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/ROrganization"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
